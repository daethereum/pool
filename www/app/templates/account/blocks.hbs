<div class="container">
{{#if model.candidates}}
        <h4>Recently Found Blocks</h4>
        <div class="table-responsive">
            <table class="table table-condensed table-striped">
                <thead>
                <tr>
                    <th>Height</th>
                    <th>Time Found</th>
                    <th>Worker</th>
                </tr>
                </thead>
                <tbody>
                {{#each model.candidates as |block|}}
                    <tr>
                        <td><a href="https://daefrom.io/block/{{block.height}}" rel="nofollow" target="_blank">{{format-number block.height}}</a></td>
                        <td>{{format-date-locale block.timestamp}}</td>
                        <td>
                            <span class="label label-danger">{{block.worker}}</span>
                        </td>
                    </tr>
                {{/each}}
                </tbody>
            </table>
        </div>
    {{else}}
        <h3>No new blocks yet</h3>
    {{/if}}
    <hr>
    {{#if model.immature}}
        <h4>Immature Blocks</h4>

        <div class="table-responsive">
            <table class="table table-condensed table-striped">
                <thead>
                <tr>
                    <th>Height</th>
                    <th>Time Found</th>
                    <th>Worker</th>
                </tr>
                </thead>
                <tbody>
                {{#each model.immature as |block|}}
                    <tr>
                        <td><a href="https://daefrom.io/block/{{block.height}}" rel="nofollow" target="_blank">{{format-number block.height}}</a></td>
                        <td>{{format-date-locale block.timestamp}}</td>
                        <td>
                            <span class="label label-danger">{{block.worker}}</span>
                        </td>

                    </tr>
                {{/each}}
                </tbody>
            </table>
        </div>
    {{else}}
        <h3>No immature blocks yet</h3>
    {{/if}}
    <hr>
    <div id="accordion">
    <div class="card">
        <div class="panel panel-success card-header" id="headingTwo">
            <div class="panel-heading"  data-toggle="collapse" data-target="#collapseTwo" aria-expanded="false" aria-controls="collapseTwo">
                <button class="btn btn-link">
                    <i class="fa fa-user fa-fw"></i>  Matured Blocks(click)
                </button>
            </div>

        </div>

        <div class="panel-body">
        <div id="collapseTwo" class="collapse" aria-labelledby="headingTwo" data-parent="#accordion">
            <div class="card-body">
                {{#if model.matured}}
                    <h4>Last 20</h4>

                    <div class="table-responsive">
                        <table class="table table-condensed table-striped">
                            <thead>
                            <tr>
                                <th>Height</th>
                                <th>Time Found</th>
                                <th>Worker</th>
                            </tr>
                            </thead>
                            <tbody>
                            {{#each model.matured as |block|}}
                                <tr>
                                    <td><a href="https://daefrom.io/block/{{block.height}}" rel="nofollow" target="_blank">{{format-number block.height}}</a></td>
                                    <td>{{format-date-locale block.timestamp}}</td>
                                    <td>
                                        <span class="label label-danger">{{block.worker}}</span>
                                    </td>

                                </tr>
                            {{/each}}
                            </tbody>
                        </table>
                    </div>
                {{else}}
                    <h3>No matured blocks yet</h3>
                {{/if}}
            </div>
        </div>
        </div>
    </div>
    </div>



</div>